{
    "name": "redux-state-sync",
    "version": "3.1.2",
    "description": "A middleware for redux to sync state in different tabs",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "/dist"
    ],
    "scripts": {
        "test": "jest",
        "build": "tsc --build",
        "clean": "tsc --build --clean",
        "eslint": "eslint",
        "prepare": "husky install client/.husky"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/AOHUA/redux-state-sync.git"
    },
    "keywords": [
        "redux",
        "react",
        "localstorage",
        "crosstab",
        "sync",
        "tabs",
        "middleware"
    ],
    "author": "AOHUA",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/AOHUA/redux-state-sync/issues"
    },
    "homepage": "https://github.com/AOHUA/redux-state-sync#readme",
    "jest": {
        "setupFiles": [
            "./__mocks__/envMock.js"
        ],
        "verbose": true
    },
    "husky": {
        "hooks": {
            "pre-commit": "npx pretty-quick --staged ng lint ng test"
        }
    },
    "devDependencies": {
        "husky": "^7.0.4",
        "prettier": "^2.5.1",
        "pretty-quick": "^3.1.3",
        "typescript": "^4.5.5"
    },
    "dependencies": {
        "broadcast-channel": "^4.10.0",
        "eslint": "^8.8.0"
    }
}
